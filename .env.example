# ============================================
# ENVIRONMENT VARIABLES - Premenné prostredia
# ============================================
#
# .env súbor a skopíruj tieto premenné


# Database (PostgreSQL cez Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/wordforge?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="vygeneruj-tajny-kluc-cez-openssl-rand-base64-32"

# OAuth Providers (GitHub)
GITHUB_CLIENT_ID="tvoj-github-client-id"
GITHUB_CLIENT_SECRET="tvoj-github-client-secret"

# Voliteľné - Google OAuth
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# Voliteľné - Analytics
# NEXT_PUBLIC_GA_ID=""

# Voliteľné - Upload avatars (ak budete používať cloud storage)
# UPLOADTHING_SECRET=""
# UPLOADTHING_APP_ID=""
